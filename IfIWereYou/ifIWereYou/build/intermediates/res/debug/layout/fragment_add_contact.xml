<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/add_contact_messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/add_contact_message"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <!-- Â  Email TextField -->
    <TextView
        android:id="@+id/add_contact_email_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/add_contact_messageTextView"
        android:layout_below="@id/add_contact_messageTextView"
        android:layout_marginTop="50dp"
        android:text="@string/add_contact_email_label"
        android:labelFor="@+id/add_contact_emailEditText" />
    <EditText
        android:id="@+id/add_contact_emailEditText"
        android:inputType="textEmailAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/add_contact_email_textView"
        android:layout_below="@id/add_contact_email_textView"
        android:ems="10" />

    <Button
        android:id="@+id/add_contact_addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_contact_emailEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="@string/add_contact_add_button_label" />

</RelativeLayout><!-- From: file:/C:/Users/d060670/Documents/Studium/if-i-were-you/IfIWereYou/ifIWereYou/src/main/res/layout/fragment_add_contact.xml -->