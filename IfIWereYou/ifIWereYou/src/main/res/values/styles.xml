<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item> <!-- Unfortunately coloring the app bar doesn't work pre Lollipop -->
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="MessageText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="MessageDetail">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="MessageBubble">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>
    <style name="MessageBubble.Left">
        <item name="android:background">@drawable/chat_bubble_left_flat</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <style name="MessageBubble.Right">
        <item name="android:background">@drawable/chat_bubble_right_flat</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

</resources>